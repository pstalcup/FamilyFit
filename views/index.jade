extends layout

block content
    nav.top-bar
        if username
            ul.title-area
                li.name
                    h1
                        a(href="#")= username
        else
            section.top-bar-section
                ul.left
                    li.has-form
                        div.row.collapse
                            div.large-5.small-5.columns
                                input(type="text", placeholder="Username")
                            div.large-5.small-5.columns
                                input(type="password", placeholder="Password")
                            div.large-2.small-2.columns
                                a(href="#" class="button expand" id="login") login
        section.top-bar-section
            ul.right
                li.divider
                li
                    a(href="#") example
    div.row
        div.large-12.columns
            h1 FamilyFit
    div.row
        div.large-12.columns
            div.panel
                h3 Welcome to FamilyFit, where you can get fit with your family!
                div.row
                    div.large-4.columns
                        h2 Get Fit Together!
                        p Compare, Compete, and Collaborate with friends and family to get into shape.
                    div.large-4.columns
                        h2 Track your stats!
                        p FamilyFit uses advanced stat tracking and visualization technology to help keep you up to pace with your goals
                    div.large-4.columns
                        h2 Donate to Charity!
                        p Make a difference for others, and donate the "winnings" to a charity of your choice